    <div class="content-body">
        <div class="container">
            <div class="row">
                <div class="col-xxl-12">
                    <div class="page-title">
                        <h4>Offers</h4>
                    </div>
                    <div class="card">
                        <div class="card-header">
                            <div class="settings-menu">
                  <a href="#">Offers creation</a>
</div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-xxl-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h4 class="card-title">Create Offer</h4>
                                        </div>
                                        <div class="card-body">
                                            <form action="#">
                                                <div class="row g-3">
                                                    <div class="col-sm-6">
                                                        <label class="form-label">Transaction Type</label>
                                                        <select class="form-select">
                                                            <option value="buy">Buy</option>
                                                            <option value="sell">Sell</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <label class="form-label">Language Default</label>
                                                        <select class="form-select">
                                                            <option value="">English</option>
                                                            <option value="">Bangla</option>
                                                            <option value="">Hindi</option>
                                                        </select>
                                                    </div>
                                                   
                                                    <div class="col-sm-6">
                                                        <label class="form-label">Payment Metthod</label>
                                                        <select class="form-select">
                                                            <option value="bank">Bank</option>
                                                            <option value="M-pesa">M-Pesa</option>
                                                            <option value="PayPal">PayPal</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <label class="form-label">Currency</label>
                                                        <select class="form-select">
                                                        <option value="MTN">Meitner</option>
                                                        <option value="LTN">Lotearn</option>
                                                    </select>
                                                    </div>
                                                    <div class="col-12">
                                                        <label class="form-label">Price in %</label>
                                                        <div class="input-group">
                                                            <select class="form-select" name="method">
                                                                <option value="bank">Above Market Price</option>
                                                                <option value="master">Below Market Price</option>
                                                                <option value="master">Fixed Price</option>
                                                            </select>
                                                            <input type="text" id="price" name="currency_Price" class="form-control"placeholder="0.1% above market price">
                                                                
                                                        </div>

                                                    </div>
                                                    <div class="col-sm-6">
                                                        <label class="form-label">TradeSpeed</label>
                                                        <select class="form-select">
                                                        <option value="MTN">1min</option>
                                                        <option value="LTN">5min<option>
                                                        </select>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <div><label class="form-label">Instructions</label></div>
                                                        <textarea name="insructions"  cols="20" rows="2" placeholder='must be verified and must be serious'></textarea>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <div><label class="form-label">limits</label></div>
                                                        <input type="text" name="limits" placeholder="100-1200 USD">
                                                    </div>
                                                </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-12">
                                    <div class="card">
                                        <div class="card-header">
